.container{
    width: 100%;
    height: 100vh;
    position: relative;
}
.header{
    width: 100%;
    height: 186rpx;
    display: flex;
}
.user_pic image{
    margin: 40rpx 30rpx 40rpx 51rpx;
    width: 108rpx;
    height: 90rpx;
    border-radius: 75%;
}
.user_name{
    margin-top: 65rpx;
    font-size: 34rpx;
    color: #000000;
}
.colorTurning{
    width: 100%;
    height: 48rpx;
}
.wrapper{
    width: 100%;
    height: 102rpx;
    display: flex;
    line-height: 102rpx;
}
.icon image{
    width: 39rpx;
    height: 39rpx;
    margin: 32rpx 26rpx 0rpx 31rpx;
}
.desc{
    color: #000000;
    font-size: 30rpx;
}
.detail{
    line-height: 102rpx;
    margin-left: 470rpx;
}
.detail image{
    padding-top: 25rpx;
    width: 30rpx;
    height: 30rpx;
}
.unlogin{
    font-size: 32rpx;
    text-align: center;
    line-height: 87.6rpx;
    background-color: #f5f5f5;
    color: #e75d5b;
    width: 684rpx;
    height: 87.6rpx;
    position: absolute;
    left: 31.2rpx;
    bottom: 64.2rpx;
    border-radius: 50rpx;
}
.colorTurning{
    background-image: linear-gradient(to bottom, #f7f8fa, #ffffff);
}
.colorTurningBottom{
    width: 100%;
    height: 39rpx;
    position: absolute;
    bottom: 0;
    background-image: linear-gradient(to top, #f7f8fa, #ffffff);
}